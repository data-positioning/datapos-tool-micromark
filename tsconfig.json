{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "noUncheckedIndexedAccess": true,
        "noImplicitAny": true,
        "outDir": "./dist",
        "paths": {
            "~/*": ["*"],
            "@/*": ["src/*"]
        },
        "resolveJsonModule": true,
        "target": "ESNext",
        "strict": true,
        "strictNullChecks": true
    },
    "include": ["vite.config.ts", "src/**/*.ts"]
}
